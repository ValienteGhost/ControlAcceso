<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Control Arduino RFID"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Sección: Configuración Arduino -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración Arduino"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etArduinoIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP del Arduino (ej: 192.168.1.105)"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnGuardarIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar IP" />

        <Button
            android:id="@+id/btnTestConexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Probar Conexión" />

        <TextView
            android:id="@+id/tvEstadoConexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: Desconocido"
            android:padding="8dp"
            android:textAlignment="center"/>

        <!-- Sección: Control Manual -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control Manual"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etUidManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UID (8 caracteres HEX)"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnEnviarArduino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar a Arduino" />

    </LinearLayout>
</ScrollView>